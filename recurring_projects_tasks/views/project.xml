<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEWS -->
    <record id="project_invoice_form" model="ir.ui.view">
        <field name="name">project.invoice.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="hr_timesheet.project_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[last()]" position="inside">
                <div>
                    <field name="project_template" class="oe_inline" string="Allow timesheets"/>
                    <label for="project_template"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="default_stage_edit_project" model="ir.ui.view">
        <field name="name">default.stage.edit.project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_task_default_stage.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Recurring">
                    <group>
                        <group>
                            <field name="project_template_id"/>
                            <field name="b_duplicate" attrs="{'invisible': [('project_template', '=', False)]}"/>
                            <field name="date_duplicate" attrs="{'invisible': [('b_duplicate', '=', False)]}"/>
                            <field name="rate_duplicate" attrs="{'invisible': [('b_duplicate', '=', False)]}"/>
                            <field name="rate_interval" attrs="{'invisible': [('b_duplicate', '=', False)]}"/>
                            <field name="date_end" attrs="{'invisible': [('b_duplicate', '=', False)]}"/>
                            <field name="count_duplicates" attrs="{'invisible': [('b_duplicate', '=', False)]}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </page>
                <page string="Recurred Projects" attrs="{'invisible': [('project_template', '=', False)]}">
                    <field name="duplicate_projects_ids"/>
                </page>
            </xpath>
        </field>
    </record>

    <!-- ACTION -->
    <record id="open_view_template_project_all_config" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">project.project</field>
        <field name="view_type">form</field>
        <field name="domain">[('project_template', '=', True)]</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="project.view_project_project_filter"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new template project.
            </p><p>
                Organize your activities (plan tasks, track issues, invoice timesheets) for internal, personal or customer projects.
            </p>
        </field>
    </record>

    <!-- ACTION INHERITANCE -->
    <record id="project.open_view_project_all" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,calendar,timeline,pivot,form</field>
        <field name="domain">[('project_template', '=', False)]</field>
    </record>
    <record id="project.open_view_project_all_config" model="ir.actions.act_window">
        <field name="domain">[('project_template', '=', False)]</field>
    </record>

    <!-- MENU ITEM-->
    <menuitem action="open_view_template_project_all_config" id="menu_template_projects_config" name="Projects Template" parent="project.menu_project_config" sequence="11"/>
</odoo>