<odoo>
	<record id="project_task_form_view" model="ir.ui.view">
		<field name="name">project.task.form.view</field>
		<field name="model">project.task</field>
		<field name="inherit_id" ref="project.view_task_form2"/>
		<field name="arch" type="xml">
			<xpath expr="//button[@name='toggle_active']" position="after">
				<button type="action" name="%(modify_followers_task.action_modify_followers_task)d" string="Modify Followers" groups="base.group_user" class="oe_stat_button" icon="fa fa-address-card-o"/>
			</xpath>
		</field>
	</record>
</odoo>